{
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "lint": "eslint . --ext .js,.ts --report-unused-disable-directives",
    "fix": "eslint . --ext .js,.ts --fix --report-unused-disable-directives",
    "test": "yarn build && jest",
    "test:ci": "yarn build && jest --ci --coverage",
    "website:install": "cd website && yarn",
    "website:start": "yarn website:install && cd website && yarn start"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/cross-spawn": "6.0.2",
    "@types/jest": "28.1.6",
    "@types/rimraf": "3.0.2",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "cross-spawn": "7.0.3",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "28.1.3",
    "jest-diff": "28.1.3",
    "jest-matcher-utils": "28.1.3",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "tempy": "1.0.1",
    "ts-jest": "28.0.8",
    "typescript": "4.7.4"
  }
}
