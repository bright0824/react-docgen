{
  "private": true,
  "engines": {
    "node": ">=14.17.0",
    "yarn": ">=3.2.2"
  },
  "scripts": {
    "build": "yarn --verbose workspaces foreach --exclude '@react-docgen-internal/*' run build",
    "watch": "yarn --verbose workspaces foreach --exclude '@react-docgen-internal/*' -p run watch",
    "lint": "eslint . --ext .js,.ts --report-unused-disable-directives --max-warnings=0",
    "fix": "eslint . --ext .js,.ts --fix --report-unused-disable-directives --max-warnings=0",
    "test": "yarn build && vitest run",
    "test:dev": "vitest",
    "g:tsc": "cd $INIT_CWD && rimraf dist/ && tsc",
    "playground:build": "yarn workspace @react-docgen-internal/playground run build",
    "playground:start": "yarn workspace @react-docgen-internal/playground run start",
    "changesets-version": "changeset version && yarn install --mode update-lockfile",
    "release": "yarn build && changeset publish"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "devDependencies": {
    "@changesets/cli": "2.25.2",
    "@types/cross-spawn": "6.0.2",
    "@types/node": "14.18.34",
    "@types/rimraf": "3.0.2",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "@vitest/coverage-c8": "0.25.8",
    "cpy": "9.0.1",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "execa": "6.1.0",
    "prettier": "2.8.1",
    "rimraf": "3.0.2",
    "tempy": "3.0.0",
    "typescript": "4.9.4",
    "vite": "4.0.1",
    "vitest": "0.25.8"
  },
  "packageManager": "yarn@3.3.0"
}
